   "outputs": [],
   "source": [
    "observation, _ = env.reset()\n",
    "\n",
    "obss = []\n",
    "for _ in range(1000):\n",
    "    observation, *_ = env.step(env.action_space.sample())\n",
    "    obss.append([*observation['monkey'], *observation['color'], observation['rewarded']])"
   ]
